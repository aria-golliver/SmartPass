<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartpass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:permission="android.permission.WRITE_EXTERNAL_STORAGE"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smartpass.LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smartpass.PasswordList"
            android:label="@string/title_activity_password_list"
            android:parentActivityName="com.example.smartpass.LoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.smartpass.LoginScreen" />
        </activity>
        <activity
            android:name="com.example.smartpass.NewAccount"
            android:label="@string/title_activity_new_account"
            android:parentActivityName="com.example.smartpass.PasswordList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.smartpass.PasswordList" />
        </activity>
        <activity
            android:name="com.example.smartpass.NewFolder"
            android:label="@string/title_activity_new_folder"
            android:parentActivityName="com.example.smartpass.PasswordList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.smartpass.PasswordList" />
        </activity>
        <activity
            android:name="com.example.smartpass.NewLogin"
            android:label="@string/title_activity_new_login"
            android:parentActivityName="com.example.smartpass.LoginScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.smartpass.LoginScreen" />
        </activity>
        <activity
            android:name="com.example.smartpass.CopyUsernameToClipboard"
            android:label="@string/title_activity_copy_to_clipboard" >
        </activity>
        <activity
            android:name="com.example.smartpass.CopyPasswordToClipboard"
            android:label="@string/title_activity_copy_password_to_clipboard" >
        </activity>
        <activity
            android:name="com.example.smartpass.DeletePassword"
            android:label="@string/title_activity_delete_password" >
        </activity>
        <activity
            android:name="com.example.smartpass.ClearClipboard"
            android:label="@string/title_activity_clear_clipboard" >
        </activity>
        <activity
            android:name="com.example.smartpass.NewSmartFileAccount"
            android:label="@string/title_activity_new_smart_file_account" >
        </activity>
    </application>

</manifest>