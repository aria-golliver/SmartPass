<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewLogin" >

    <Button
        android:id="@+id/createNewLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/solidrect"
        android:minWidth="159dip" />

    <Button
        android:id="@+id/newLoginCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/createNewLoginButton"
        android:layout_alignBottom="@+id/createNewLoginButton"
        android:layout_alignParentRight="true"
        android:background="@drawable/solidrect"
        android:minWidth="159dip" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:src="@drawable/x_icon2" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:src="@drawable/check_icon2" />

    <TextView
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_marginTop="62dp"
        android:text="@string/PleaseConfigureText"
        android:textColor="@color/OffBlack" />

    <EditText
        android:id="@+id/newLoginFullNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newLoginUsernameEditText"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="22dp"
        android:background="@drawable/outlinerect"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxWidth="200dp"
        android:paddingLeft="5dp"
        android:text="@string/fullName"
        android:textColor="@color/OffBlack"
        android:width="200dp" />

    <EditText
        android:id="@+id/newLoginEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newLoginUsernameEditText"
        android:layout_below="@+id/newLoginUsernameEditText"
        android:layout_marginTop="19dp"
        android:background="@drawable/outlinerect"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:maxWidth="200dp"
        android:paddingLeft="5dp"
        android:text="@string/emailText"
        android:textColor="@color/OffBlack"
        android:width="200dp" />

    <EditText
        android:id="@+id/newLoginUsernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newLoginFullNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/outlinerect"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:maxWidth="200dp"
        android:paddingLeft="5dp"
        android:text="@string/username"
        android:textColor="@color/OffBlack"
        android:width="200dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/newLoginPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newLoginEmailEditText"
        android:layout_below="@+id/newLoginEmailEditText"
        android:layout_marginTop="21dp"
        android:background="@drawable/outlinerect"
        android:ems="10"
        android:inputType="textPassword"
        android:maxWidth="200dp"
        android:paddingLeft="5dp"
        android:text="@string/password"
        android:textColor="@color/OffBlack"
        android:width="200dp" />

</RelativeLayout>